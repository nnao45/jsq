{
  "name": "@nnao45/jsq",
  "version": "0.1.3",
  "description": "JavaScript-Powered JSON Query CLI Tool",
  "main": "dist/index.js",
  "bin": {
    "jsq": "bin/jsq"
  },
  "scripts": {
    "build": "esbuild src/simple-cli.ts --bundle --platform=node --target=node16 --outfile=dist/index.js --format=cjs --packages=external && esbuild src/repl/standalone-repl.ts --bundle --platform=node --target=node16 --outfile=dist/repl.js --format=esm --packages=external",
    "build:watch": "npm run build -- --watch",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format --write src/",
    "format:check": "biome format src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "type-check": "tsc --noEmit",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm run format && npm run lint:fix && npm run check && npm run build && npm run test"
  },
  "keywords": [
    "json",
    "jq",
    "cli",
    "javascript",
    "typescript",
    "jquery",
    "query",
    "transform",
    "stream"
  ],
  "author": "nnao45",
  "license": "MIT",
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "csv-parse": "^6.1.0",
    "fast-json-parse": "^1.0.3",
    "ink": "^4.4.1",
    "inquirer": "^8.2.6",
    "isolated-vm": "^6.0.1",
    "joi": "^17.11.0",
    "JSONStream": "^1.3.5",
    "listr2": "^8.0.1",
    "lodash": "^4.17.21",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "ora": "^5.4.1",
    "pacote": "^17.0.4",
    "papaparse": "^5.5.3",
    "parquetjs-lite": "^0.8.7",
    "react": "^18.3.1",
    "semver": "^7.5.4",
    "stream-json": "^1.8.0",
    "tar": "^6.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.5",
    "@types/react": "^18.3.23",
    "@types/semver": "^7.5.6",
    "@types/tar": "^6.1.11",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "esbuild": "^0.19.9",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nnao45/jsq.git"
  },
  "bugs": {
    "url": "https://github.com/nnao45/jsq/issues"
  },
  "homepage": "https://github.com/nnao45/jsq#readme"
}
